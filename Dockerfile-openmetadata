FROM openmetadata/server:1.7.1

# Create a custom dir you control
USER root
RUN mkdir -p /app/custom-bootstrap


# Copy the WHOLE folder (safe and avoids filename mismatches)
COPY custom-bootstrap/ /app/custom-bootstrap/

# Make your script executable
RUN chmod +x /app/custom-bootstrap/bootstrap_storage.sh



USER 1000  # Go back to non-root if needed 
