# Dockerfile
FROM apache/airflow:2.8.1-python3.11

# Use root temporarily to install system dependencies
USER root

# Install OS-level dev libraries required to build wheels for psycopg2, mysqlclient, openmetadata-ingestion
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libpq-dev \
    default-libmysqlclient-dev \
    build-essential \
    python3-dev \
    libffi-dev \
    libssl-dev \
    libsasl2-dev \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Switch back to non-root airflow user
USER airflow

# Install only required packages (no airflow-providers)
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir \
    openmetadata-ingestion==1.7.1.1 \
    mysqlclient==2.2.0 \
    psycopg2-binary==2.9.9
