# Install required Python packages with constraints
RUN pip install --no-cache-dir \
    "apache-airflow-providers-fab==1.1.0" \
    "flask-appbuilder==4.3.4" \
    && pip install --no-cache-dir \
    "psycopg2-binary==2.9.3" \
    "openmetadata-ingestion==1.7.2.1" \
    "openmetadata-managed-apis==1.7.2.1" \
    "apache-airflow-providers-openlineage==1.2.0" \
    "pyarrow==12.0.1"
RUN pip install openmetadata-ingestion==1.7.3.0


